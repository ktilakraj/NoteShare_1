<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/textstyledialogmain"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    android:orientation="vertical" >

    <LinearLayout
        android:id="@+id/toplayout"
        android:layout_width="fill_parent"
        android:layout_height="44dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:orientation="horizontal"
        android:weightSum="2" >

        <Button
            android:id="@+id/buttoncolor"
            android:layout_width="wrap_content"
            android:layout_height="44dp"
            android:layout_weight="1"
            android:background="@android:color/white"
            android:text="Color"
            android:textColor="@color/header_bg" />

        <Button
            android:id="@+id/buttonunderline"
            android:layout_width="wrap_content"
            android:layout_height="44dp"
            android:layout_weight="1"
            android:background="@drawable/borderframe"
            android:text="Underline"
            android:textColor="@color/header_bg"
            android:visibility="gone" />

        <Button
            android:id="@+id/buttontypeface"
            android:layout_width="wrap_content"
            android:layout_height="44dp"
            android:layout_weight="1"
            android:background="@color/selected_bg_color"
            android:text="TypeFace"
            android:textColor="@android:color/white" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_below="@+id/toplayout"
        android:background="@color/light_gray_999999"
        android:layout_height="1dp" />

    <ListView
        android:id="@+id/ListViewItems"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/toplayout" >
    </ListView>

</RelativeLayout><!-- From: file:/Users/tilakrajverma/NoteShare/app/src/main/res/layout/text_theam_file.xml -->