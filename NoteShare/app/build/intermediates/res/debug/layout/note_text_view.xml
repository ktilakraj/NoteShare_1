<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/textNoteControls"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    android:padding="0dp"
    android:layout_gravity="center_vertical|center_horizontal"
    android:background="@color/header_bg"
    android:weightSum="7" >

    <ImageButton
        android:id="@+id/textButtondrawback"
        android:layout_width="20dp"
        android:layout_weight="1"
        android:layout_height="match_parent"
        android:background="@android:color/transparent"
        android:scaleType="fitCenter"
        android:src="@drawable/scrbble_back" />

    <ImageButton
        android:id="@+id/textButtondrawnew"
        android:layout_width="40dp"
        android:layout_height="match_parent"
          android:layout_weight="1"
          android:scaleType="fitCenter"
          android:background="@android:color/transparent"
        android:src="@drawable/text_note_bullet" />

    <ImageButton
        android:id="@+id/textButtondrawdraw"
        android:layout_width="40dp"
          android:layout_weight="1"
        android:layout_height="match_parent"
        android:background="@android:color/transparent"
        android:scaleType="fitCenter"
        android:src="@drawable/text_note_numbering" />

    <ImageButton
        android:id="@+id/textButtondrawcolors"
        android:layout_width="40dp"
          android:layout_weight="1"
          android:scaleType="fitCenter"
        android:layout_height="match_parent"
        android:background="@android:color/transparent"
        android:src="@drawable/text_note_bold" />

    <ImageButton
        android:id="@+id/textButtondrawbrushsize"
        android:layout_width="40dp"
          android:layout_weight="1"
          android:scaleType="fitCenter"
        android:layout_height="match_parent"
        android:background="@android:color/transparent"
        android:src="@drawable/text_note_itlic" />

    <ImageButton
        android:id="@+id/textButtondrawerase"
        android:layout_width="40dp"
        android:layout_height="match_parent"
        android:scaleType="fitCenter"
        android:background="@android:color/transparent"
          android:layout_weight="1"
        android:src="@drawable/text_note_underline" />

    <ImageButton
        android:id="@+id/textButtondrawMore"
        android:layout_width="40dp"
        android:scaleType="fitCenter"
        android:layout_height="match_parent"
        android:background="@android:color/transparent"
          android:layout_weight="1"
        android:src="@drawable/scrbble_more" />

</LinearLayout><!-- From: file:/Users/tilakrajverma/NoteShare/app/src/main/res/layout/note_text_view.xml -->