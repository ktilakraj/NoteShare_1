<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="190dp"
    android:background="@android:color/transparent"
    android:orientation="horizontal"
    android:weightSum="2" >

    <LinearLayout
        android:id="@+id/containerLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical" >

        <LinearLayout
            android:id="@+id/layoutnotefolderAdapter"
            android:layout_width="match_parent"
            android:layout_height="162dp"
            android:layout_marginLeft="1dp"
            android:layout_marginRight="1dp"
            android:layout_marginTop="1dp"
            android:background="@android:color/transparent"
            android:orientation="vertical" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="20dp"
                android:layout_gravity="right"
                android:layout_marginEnd="5dp"
                android:layout_marginTop="3dp"
                android:background="@android:color/transparent"
                android:text="01.04.15"
                android:textColor="@color/light_gray_666666"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/textViewSlideMenuName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginEnd="5dp"
                android:layout_marginStart="5dp"
                android:layout_marginTop="5dp"
                android:background="@android:color/transparent"
                android:text=""
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textColor="@color/light_gray_666666"
                android:textSize="16sp"
                android:textStyle="normal" />

            <TextView
                android:id="@+id/textViewSlideMenuNameSubTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="0dp"
                android:layout_marginEnd="5dp"
                android:layout_marginStart="5dp"
                android:layout_marginTop="5dp"
                android:background="@android:color/transparent"
                android:lines="4"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textColor="@color/light_gray_999999"
                android:textSize="14sp"
                android:textStyle="normal" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/layoutshareAndDelete"
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:layout_gravity="left"
            android:layout_marginBottom="1dp"
            android:layout_marginLeft="1dp"
            android:layout_marginRight="1dp"
            android:orientation="horizontal" >

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="2dp"
                android:scaleType="fitCenter"
                android:src="@drawable/delete_icon" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="2dp"
                android:scaleType="fitCenter"
                android:src="@drawable/share_small_icon" />
        </LinearLayout>

        <View
            android:id="@+id/layoutsepreter1"
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="@color/ffffff"
            android:visibility="visible" />
    </LinearLayout>

    <View
        android:id="@+id/layoutsepreter"
        android:layout_width="2dp"
        android:layout_height="190dp"
        android:layout_gravity="end"
        android:layout_weight="1"
        android:background="@color/ffffff"
        android:visibility="visible" />

</LinearLayout><!-- From: file:/Users/tilakrajverma/NoteShare/app/src/main/res/layout/notefoldergridrow.xml -->